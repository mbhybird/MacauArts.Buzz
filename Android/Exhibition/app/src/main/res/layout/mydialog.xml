<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:maxWidth="@dimen/dig_max_width_150dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="#EBEEDD"
    >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dig_li_height_50dp"
            android:background="@color/footer_bg_color"

            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dig_tx_margin_left_10dp"
                android:text="Tips"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dig_tx_size_20dp"
                android:textStyle="bold"
                />
        </LinearLayout>


    <!--<LinearLayout-->

        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="30dp">-->
    <!--<TextView-->
        <!--android:id="@+id/dialog_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="Title"-->
        <!--android:textColor="#282828"-->
        <!--android:textSize="20sp"-->
        <!--android:textStyle="bold"-->
        <!--/>-->
    <!--</LinearLayout>-->
    <LinearLayout
       android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dig_li_height_80dp"
        android:padding="@dimen/dig_li_padding_10dp"
        >
        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="this is Tips"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dig_tx_margin_left_10dp"
            android:textColor="#282828"
            android:textSize="@dimen/dig_tx_text_size_17dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dig_li_padding_top_15dp"
        android:paddingBottom="@dimen/dig_li_padding_bottom_5dp">
        <Button
            android:id="@+id/dialog_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/dig_tx_text_size_15dp"
            android:textColor="#FFFFFF"
            android:layout_height="@dimen/dig_li_height_40dp"
            android:layout_marginRight="@dimen/dig_li_margin_left_5dp"
            android:layout_marginLeft="@dimen/dig_li_margin_right_5dp"
            android:background="@color/red_color"/>
        <Button
            android:id="@+id/dialog_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/dig_tx_text_size_15dp"
            android:textColor="#FFFFFF"
            android:background="@color/footer_bg_color"
            android:layout_height="@dimen/dig_li_height_40dp"
            android:layout_marginLeft="@dimen/dig_li_margin_left_5dp"
            android:layout_marginRight="@dimen/dig_li_margin_right_5dp"
            />
    </LinearLayout>


    </LinearLayout>







</RelativeLayout>


